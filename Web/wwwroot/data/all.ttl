		[ :target uc:13; :comment "Core requirement for all use cases." ; ]
.

req:49
	:category cat:1 ;
	:title "Complete API Coverage" ;
	:description "All system functionality must be available through the API. No functionality should require direct user interface access. This enables programmatic access and automation of all operations." ;
	:useCase
		[ :target uc:1; :comment "Core requirement for all use cases." ; ],
		[ :target uc:2; :comment "Core requirement for all use cases." ; ],
